@using IdentityServer.Controllers.Account
@model IdentityServer.Controllers.Account.ExternalLoginConfirmationViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>@ViewData["Title"].</h2>
<h4>External Login</h4>
<form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Association Form</h4>
    <p class="text-info">
        Associate Account
    </p>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">E-Mail</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <label asp-for="Tenant" class="col-md-2 control-label">Tenant</label>
        <div class="col-md-10">
            <input asp-for="Tenant" class="form-control" />
            <span asp-validation-for="Tenant" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>